




public class Manager {
    String Name;
    String p;
    final static String pass="AAJ";

    
    public Manager(String Name, String p) {
        this.Name = Name;
        this.p = p;
    }
    public void seeTransaction(){
        Inventory.readTransaction();
    }
    public void AddInventory(String Product,String company,int price,int vol){
        Stock[] s=new Stock[Inventory.stocks.length+1];
        for (int i = 0; i < s.length-1; i++) {
            s[i]=Inventory.stocks[i];
            
        }
        Stock newStock;
        newStock = new Stock(Product,company,price,vol);
        s[s.length-1]=newStock;
        Inventory.stocks=s;
    }
    public void seeBill(){
        System.out.println("Bill="+Inventory.generateBill());
    }
    
    
}
